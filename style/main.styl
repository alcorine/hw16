//socialhover
.social,.social:visited { color: #fff; }
.social:hover { color: #fff; }
.social {
  margin: 0 2px; width: 20px; height: 20px;
  display: inline-block; text-align: center; line-height:20px; color: #fff;

  position: relative;
  transform:rotateY(0deg);
  transition(transform .25s ease-out);
  transform-style:preserve-3d;
}
.social > div {
  width: 20px; height: 20px; background: #000;
  position: absolute; top: 0; left: 0; right: 0; bottom: 0;
}
.social >.front {
  transform:translateZ(10px);
  font-size: 10px;
}
.social >.back {
  background: #3B5998; font-size: 10px;
  transform:rotateY(-90deg) translateZ(10px);
}

/*  Social Media Colors
	Facebook #3B5998
	Flickr #FE0883
