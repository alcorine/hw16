.lrn-btn
  font-size 15px
  color #fff
  text-decoration none
  line-height 40px
  padding 0 15px
  background #000
  &:hover
    color #fff
    text-decoration none
  display: inline-block;
  vertical-align: middle;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  box-shadow: 0 0 1px rgba(0, 0, 0, 0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -moz-osx-font-smoothing: grayscale;
  position: relative;
  overflow: hidden;
.lrn-btn:before
  content ""
  position absolute
  z-index -1
  left 0
  right 0
  bottom 0
  background #FFEA00
  height 2px
  -webkit-transition-property right
  transition-property right
  -webkit-transition-duration 0.3s
  transition-duration 0.3s
  -webkit-transition-timing-function ease-out
  transition-timing-function ease-out

.lrn-btn:hover:before, .lrn-btn:focus:before, .lrn-btn:active:before
  right 100%

.hvr-lrn-btn
  display inline-block
  vertical-align middle
  -webkit-transform translateZ(0)
  transform translateZ(0)
  box-shadow 0 0 1px rgba(0, 0, 0, 0)
  -webkit-backface-visibility hidden
  backface-visibility hidden
  -moz-osx-font-smoothing grayscale
  position relative
  overflow hidden
  &:after
    content ""
    position absolute
    z-index -1
    left 100%
    right 0
    top 0
    background #FFEA00
    height 2px
    -webkit-transition-property left
    transition-property left
    -webkit-transition-duration 0.3s
    transition-duration 0.3s
    -webkit-transition-timing-function ease-out
    transition-timing-function ease-out

.hvr-lrn-btn:hover:after, .hvr-lrn-btn:focus:after, .hvr-lrn-btn:active:after
  left 0

